---
import MainHead from "../components/MainHead.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

// Fonts & Styles???

const {
  title = "OWDDM | Workshop | Osaka",
  description = "Build a blog and portfolio in a Astro.build framework, along with Tailwind CSS and HyGraph as a headless CMS!",
} = Astro.props;
---

<html
  lang="en"
  class="scroll-behavior: smooth; h-full motion-safe:scroll-smooth"
>
  <MainHead {title} {description} />
  <body
    class="bg-gray-50 antialiased transition-colors duration-500 dark:bg-gray-700 text-gray-600 dark:text-gray-50"
  >
  <Navigation />
  <main>
    <slot />
  </main>
  <Footer />
  </body>
</html>
