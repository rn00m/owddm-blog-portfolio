---
import { Image } from "astro:assets";
import RyuHero from "../assets/img/goldDragonRed.webp";
import Avatar from "../assets/img/sunset-crop.webp";

const props = Astro.props;
const sizes = "(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw";
---

<section id="hero" class="h-full">
  <Image
    src={RyuHero}
    alt="Hero image - An Asian golden dragon"
    loading="eager"
    class="absolute object-cover h-screen"
    sizes={sizes}
  />
  <div
    class="relative grid h-screen place-items-center bg-red-800/80 dark:bg-gray-800/90 p-6"
  >
    <div
      class="flex flex-col lg:flex-row items-center gap-12 px-0 sm:px-6"
    >
          <div id="avatar">
        <div class="overflow-hidden">
          <Image
            src={Avatar}
            alt="Selfie"
            loading="eager"
            class="rounded-full w-52 h-52 sm:w-80 sm:h-80 md:ml-10 mb-10"
            width={1280}
            height={853}
          />
        </div>
      </div>
      <div class="text-grey-950">
        <div class="text-center">
          <h1
            class="font-Futurewave text-xs sm:text-xl text-gray-400 dark:text-white"
          >
            an <span
              class="text-sm sm:text-4xl font-extrabold font-Futurewave text-gradient-hero"
              >OWDDM
            </span>Workshop<br />with<span
              class="text-sm sm:text-2xl font-extrabold font-Futurewave"
            >
              Romano Moesa</span
            >
          </h1>
          <h2
            class="text-gradient-hero text-sm sm:text-xl font-semibold uppercase tracking-widest sm:text-right"
          >
            TBA March or April :2024
          </h2>
          <p
            class="mt-6 max-w-xl mx-auto leading-7 text-gradient-hero font-Futurewave text-xs sm:text-base"
          >
            Learn how to create a blog & portfolio in Astro and Tailwind CSS
            with HyGraph as a headless CMS.
          </p>
        </div>
        <div
          class="flex justify-center space-x-1 sm:space-x-5 my-4 lg:my-10 font-Futurewave"
        >
          <a
            href="https://www.meetup.com/ja-JP/osaka-web-designers-and-developers-meetup/"
            target="_blank"
            class="flex items-center justify-center gap-3 border-2 border-current px-2 py-1 sm:px-6 sm:py-4 text-white/20"
          >
